@model IEnumerable<Delf_WebApp.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Categorías</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Cargar nueva categoria</a>
</div>
<hr />
@if (!Model.Any()) // Mensaje si no hay categorías
{
    <div class="alert alert-warning" role="alert">
        No se encontraron categorías.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalle</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
