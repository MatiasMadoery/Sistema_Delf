@model Delf_WebApp.Models.Pedido

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle</h1>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente!.Nombre) @Html.DisplayFor(model => model.Cliente!.Apellido)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ArticulosCantidades!.First().Articulo!.Codigo)</th>
            <th>@Html.DisplayNameFor(model => model.ArticulosCantidades!.First().Articulo!.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.ArticulosCantidades!.First().Articulo!.Precio)</th>
            <th>@Html.DisplayNameFor(model => model.ArticulosCantidades!.First().Cantidad)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var articuloCantidad in Model.ArticulosCantidades!)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => articuloCantidad.Articulo!.Codigo)</td>
                <td>@Html.DisplayFor(modelItem => articuloCantidad.Articulo!.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => articuloCantidad.Articulo!.Precio)</td>
                <td>@Html.DisplayFor(modelItem => articuloCantidad.Cantidad)</td>
            </tr>
        }
    </tbody>
</table>
<div> 
    <h5>Total del Pedido: @ViewBag.Total.ToString("C")</h5> 
</div>
<br />
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Eliminar</a> |
    <a asp-action="ExportPedido" asp-controller="Export" asp-route-id="@Model?.Id" class="btn btn-info">Exportar a PDF</a>
</div>
