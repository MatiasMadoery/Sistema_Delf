@model Delf_WebApp.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h1>Crear nuevo Usuario</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreUsuario" class="control-label">Nombre de Usuario</label>
                <input asp-for="NombreUsuario" class="form-control" placeholder="Ingrese el nombre de usuario" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Contrasena" class="control-label">Contraseña</label>
                <input asp-for="Contrasena" class="form-control" placeholder="Ingrese contraseña" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Rol" class="control-label">Rol</label>
                <input asp-for="Rol" class="form-control" placeholder="Ingrese rol" />
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
